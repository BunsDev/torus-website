{
  "extends": [
    "standard",
    "@vue/standard",
    "plugin:vue/recommended",
    "prettier",
    "prettier/babel",
    "plugin:prettier/recommended",
    "prettier/vue",
    "eslint:recommended",
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:flowtype/recommended",
    "adjunct",
    "problems",
    "plugin:vue-scoped-css/recommended",
    "plugin:promise/recommended"
  ],
  "plugins": ["prettier", "vue", "babel", "promise", "import", "flowtype", "standard", "vue-scoped-css"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "unicorn/filename-case": 0,
    "vue/array-bracket-spacing": 2,
    "vue/arrow-spacing": 2,
    "vue/block-spacing": 2,
    "vue/brace-style": 2,
    "vue/comma-dangle": 2,
    "vue/component-definition-name-casing": 2,
    "vue/component-name-in-template-casing": 2,
    "vue/component-tags-order": [
      2,
      {
        "order": ["template", "script", "style"]
      }
    ],
    "vue/dot-location": 2,
    "vue/eqeqeq": 2,
    "vue/key-spacing": 2,
    "vue/keyword-spacing": 2,
    "vue/no-reserved-component-names": 2,
    "vue/no-restricted-syntax": 2,
    "vue/space-infix-ops": 2,
    "vue/space-unary-ops": 2,
    "vue/v-on-function-call": 2,
    "vue/valid-v-bind-sync": 2,
    "vue/valid-v-slot": 2,
    "arrow-parens": [2, "as-needed"],
    "object-curly-newline": 0,
    "semi": [2, "never"],
    "comma-dangle": [
      2,
      {
        "arrays": "ignore",
        "objects": "ignore"
      }
    ],
    "vue/max-attributes-per-line": [
      2,
      {
        "singleline": 20,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }
    ],
    "quotes": [2, "single"],
    "max-len": [
      2,
      {
        "code": 150
      }
    ],
    "no-extra-semi": 0,
    "no-unused-vars": [2, { "args": "after-used", "argsIgnorePattern": "_" }],
    "no-console": 2,
    "no-nested-ternary": 0,
    "linebreak-style": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "prettier/prettier": [
      2,
      {
        "singleQuote": true,
        "printWidth": 150,
        "semi": false
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "document": "readonly",
    "fetch": "readonly",
    "it": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "describe": "readonly",
    "expect": "readonly",
    "serviceworker": "readonly"
  },
  "settings": {
    "polyfills": ["BroadcastChannel"]
  }
}
